@model dudegomvc.Models.TbInvoice

@{
    ViewData["Title"] = "Create";
}

<div class="Container grid grid-cols-[1.3fr_0.70fr]">

    <div class="SectionViewInf flex flex-column text-6xl">
        <div class="flex justify-center">
            <img src="~/img/Create.svg" alt="Alternate Text" class="w-50" />
        </div>
        <div class="flex"><span class="">Comencemos...</span> </div>
        <div class="w-50"><hr></hr></div>

        <div class="text-lg mt-2.5 pr-20 mr-20">
            <span>
                Empecemos llenando los datos principales del cliente,
                no te preocupes, luego agregaremos el detalle.
            </span>
        </div>
    </div>

    <div class="SectionViewMenu flex flex-column mt-6">

        <div class="flex text-center"><span class="font-bold text-green-600 text-3xl">Nuevo <span class="text-black font-regular text-md">Registro</span></span></div>

        <form asp-action="Create" class="mt-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label font-thin text-lg">Factura</label>
                <input asp-for="InvoiceNumber" class="form-control mb-3" />
                <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label font-thin text-lg">Cliente</label>
                <select asp-for="IdCustomer" class="form-control mb-3" asp-items="ViewBag.IdCustomer"></select>
            </div>
            <div class="form-group">
                <label class="control-label font-thin text-lg">Sucursal</label>
                <select asp-for="IdBranch" class="form-control mb-3" asp-items="ViewBag.IdBranch"></select>
            </div>
            <div class="form-group">
                <label class="control-label font-thin text-lg">Vendedor</label>
                <select asp-for="IdSalesperson" class="form-control  mb-3" asp-items="ViewBag.IdSalesperson"></select>
            </div>
            <div class="form-group bg-green-600 rounded-full w-28 h-10 text-center content-center text-white font-thin">
                <i class="fa-solid fa-floppy-disk"></i>
                <input type="submit" value=" Guardar" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
