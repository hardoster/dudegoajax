@model dudegomvc.Models.InvoiceViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="Container grid grid-cols-[1.3fr_0.70fr]">
    <div class="containerSection1">
        <div class="invoiceBarUp flex flex-row mt-6">
            <div class="form-group mr-4">
                <label class="control-label">Factura</label>
                <label class="form-control" id="invoiceNumberLabel">@ViewData["InvoiceNumber"]</label>
                <input type="hidden" id="idInvoiceInput" value="@ViewData["IdInvoice"]" />
            </div>

            <div class="form-group mr-4">
                <label class="control-label">Nombre del cliente</label>
                <input type="text" class="form-control" id="NameCustomer" value="@ViewData["NameCustomer"]" readonly>
            </div>

            <div class="form-group mr-4">
                <label class="control-label">Sucursal</label>
                <input type="text" class="form-control" id="BranchName" value="@ViewData["NameBranch"]" readonly>
            </div>

            <div class="form-group mr-4">
                <label class="control-label">Vendedor</label>
                <input type="text" class="form-control" id="SlP" value="@ViewData["NameSalesperson"]" readonly>
            </div>
    </div>

        <div class=" flex flex-column SectionOne mt-12 items-center">
            <div class="text-5xl text-center"><span>Agregar <span class="font-bold text-green-600">detalle</span></span></div>
            <div class="mt-1"><span text-gray>Ahora agrega la cantidad de unidades</span></div>
            <div class=""><span text-gray>que nuestro cliente alquilara."</span></div>
        </div>

    <div class="flex flex-column mt-12">
        <table id="tbDetails" class="w-full text-sm text-left rtl:text-right text-gray-500 ">
            <thead class="text-xs text-gray-700 uppercase ">
                <tr>
                    <th scope="col" class="px-6 py-3 bg-gray-50 ">
                        Tiempo arrendamiento
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Precio por dia
                    </th>
                    <th scope="col" class="px-6 py-3 bg-gray-50">
                        Deposito
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Placa
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Factura
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

  </div>

   
   
    <div class="Containersection2 flex flex-column ml-24 mt-5 rounded-xl shadow-lg p-5">

        <div class="flex text-center"><span class="font-bold text-green-600 text-3xl">Nueva <span class="text-black font-regular text-md">Unidad</span></span></div>

        <div class="flex flex-column justify-center">

            <div class="form-group mt-3">
                <label class="control-label">Placa</label>

                <select id="IdCarOPT" class="form-control">
                    <option value="">Seleccionar automóvil</option>
                    @foreach (var car in ViewBag.Cars)
                    {
                        <option value="@car.IdCar">@car.NumberPlate</option>
                    }
                </select>


            </div>
            <div class="form-group mt-3">
                <label class="control-label">Dias</label>
                <input id="DayDuration" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Precio por dia</label>
                <input id="PriceDay" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Deposito</label>
                <input id="RentalDeposit" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <input type="button" id="addButton" value="Agregar" class="btn btn-primary mr-3" />

            <input type="submit" value="Guardar" id="submit-button" class="btn btn-primary" />
        </div>
    </div>


 

</div> 





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

















